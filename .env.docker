# Configuración para producción con Docker
APP_NAME="Avaluo Vehicular"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=http://localhost:8080

APP_LOCALE=es
APP_FALLBACK_LOCALE=es
APP_FAKER_LOCALE=es_ES

APP_MAINTENANCE_DRIVER=file

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Base de datos SQLite
DB_CONNECTION=sqlite
DB_DATABASE=/var/www/html/database/database.sqlite

# Sesiones en base de datos
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

# Cola en base de datos
QUEUE_CONNECTION=database

# Cache en base de datos
CACHE_STORE=database

# Configuración de correo (ajustar según necesidad)
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="noreply@avaluo.com"
MAIL_FROM_NAME="${APP_NAME}"

# Ejecutar migraciones automáticamente al iniciar (opcional)
AUTO_MIGRATE=false

VITE_APP_NAME="${APP_NAME}"
